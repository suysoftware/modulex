{
    "name": "gdrive",
    "display_name": "Google Drive & Docs",
    "description": "Google Drive & Docs integration for managing files and folders",
    "version": "1.0.0",
    "author": "ModuleX",
    "requires_auth": true,
    "auth_type": "oauth2",
    "setup_environment_variables": [
        {
            "name": "GOOGLE_CLIENT_ID",
            "description": "Google OAuth2 Client ID from Google Cloud Console (shared for Gmail and Google Drive)",
            "sample_format": "123456789012-abcdefghijklmnopqrstuvwxyz123456.apps.googleusercontent.com",
            "about_url": "https://console.developers.google.com/apis/credentials"
        },
        {
            "name": "GOOGLE_CLIENT_SECRET",
            "description": "Google OAuth2 Client Secret from Google Cloud Console (shared for Gmail and Google Drive)",
            "sample_format": "GOCSPX-abcdefghijklmnopqrstuvwxyz123456",
            "about_url": "https://console.developers.google.com/apis/credentials"
        }
    ],
    "actions": [
        {
            "name": "search_files",
            "description": "Search for files in Google Drive",
            "parameters": {
                "query": {
                    "type": "string",
                    "description": "Search query for file names",
                    "required": true
                },
                "page_size": {
                    "type": "integer",
                    "description": "Maximum number of files to return",
                    "default": 10,
                    "optional": true
                }
            }
        },
        {
            "name": "get_file",
            "description": "Get file content and metadata by file ID",
            "parameters": {
                "file_id": {
                    "type": "string",
                    "description": "Google Drive file ID",
                    "required": true
                }
            }
        },
        {
            "name": "list_files",
            "description": "List files in Google Drive with optional filters",
            "parameters": {
                "folder_id": {
                    "type": "string",
                    "description": "Folder ID to list files from (optional)",
                    "optional": true
                },
                "page_size": {
                    "type": "integer",
                    "description": "Maximum number of files to return",
                    "default": 10,
                    "optional": true
                },
                "mime_type": {
                    "type": "string",
                    "description": "Filter by MIME type (optional)",
                    "optional": true
                }
            }
        },
        {
            "name": "get_file_metadata",
            "description": "Get detailed metadata for a specific file",
            "parameters": {
                "file_id": {
                    "type": "string",
                    "description": "Google Drive file ID",
                    "required": true
                }
            }
        },
        {
            "name": "download_file",
            "description": "Download file content as text or binary data",
            "parameters": {
                "file_id": {
                    "type": "string",
                    "description": "Google Drive file ID",
                    "required": true
                }
            }
        },
        {
            "name": "create_document",
            "description": "Create a new Google Docs document with content",
            "parameters": {
                "title": {
                    "type": "string",
                    "description": "Document title",
                    "required": true
                },
                "content": {
                    "type": "string",
                    "description": "Document content/text",
                    "required": true
                },
                "folder_id": {
                    "type": "string",
                    "description": "Folder ID to create document in (optional)",
                    "optional": true
                }
            }
        },
        {
            "name": "create_spreadsheet",
            "description": "Create a new Google Sheets spreadsheet with optional data",
            "parameters": {
                "title": {
                    "type": "string",
                    "description": "Spreadsheet title",
                    "required": true
                },
                "data": {
                    "type": "array",
                    "description": "2D array of data to populate the spreadsheet (e.g., [['Name', 'Status'], ['John', 'Present'], ['Jane', 'Absent']])",
                    "optional": true
                },
                "folder_id": {
                    "type": "string",
                    "description": "Folder ID to create spreadsheet in (optional)",
                    "optional": true
                }
            }
        },
        {
            "name": "create_presentation",
            "description": "Create a new Google Slides presentation",
            "parameters": {
                "title": {
                    "type": "string",
                    "description": "Presentation title",
                    "required": true
                },
                "folder_id": {
                    "type": "string",
                    "description": "Folder ID to create presentation in (optional)",
                    "optional": true
                }
            }
        },
        {
            "name": "create_text_file",
            "description": "Create a new plain text file",
            "parameters": {
                "title": {
                    "type": "string",
                    "description": "File name (with .txt extension)",
                    "required": true
                },
                "content": {
                    "type": "string",
                    "description": "File content",
                    "required": true
                },
                "folder_id": {
                    "type": "string",
                    "description": "Folder ID to create file in (optional)",
                    "optional": true
                }
            }
        }
    ]
}
